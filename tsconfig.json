{
  "files": [],
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "outDir": "dist", 
    "rootDir": "src",  
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsbuildinfo",
    "noImplicitAny": false,
    "strict": false,
    "typeRoots": ["node_modules/@types", "node_modules/swiper/types"],
    "jsx": "react-jsx", 
    "skipLibCheck": true
  }
}
